  <tbody>
    <% @cart.each do |product_id, quantity| %>
      <% product = Product.find(product_id) %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <%= form_tag update_quantity_carts_path, method: :post do %>
            <%= hidden_field_tag :product_id, product_id %>
            <%= number_field_tag :quantity, quantity, min: 1, class: 'quantity-field' %>
            <%= button_tag "Update", type: 'submit', class: 'update-button' %>
          <% end %>
        </td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= number_to_currency(product.price * quantity) %></td>
        <td><%= link_to "Remove", remove_from_cart_carts_path(product_id: product_id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>
<div class="total-amount">
  <h3>Total Amount: <%= number_to_currency(@total_amount) %></h3>
</div>
<div>
  <%= form_for :cart, url: proceed_to_order_cart_path(@cart), method: :post do |f| %>
    <%= f.submit "Proceed to Order", class: "btn btn-primary" %>
  <% end %>
</div>
