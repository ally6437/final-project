<p style="color: green"><%= notice %></p>

<h1 class="title">Products</h1>

<div>
  <%= form_with(url: search_products_path, method: :get, local: true) do%>
  <div>
    <nav>
    <%= text_field_tag(:keywords,nil,class:"input", placeholder:"Search for products")%>
    <%=select_tag :category, options_for_select(Category.all.map{ |c| [c.name, c.id]}, params[:category]), prompt:"All categories"%>
    <%=submit_tag("search")%>
    </nav>
  </div>
  <%end%>
</div>

<div class="columns is-multiline">
  <% @products.each do |product| %>
    <div class="column is-one-quarter">
      <div class="card">
        <% if product.image.attached? %>
        <%#= image_tag product.image.variant(resize_to_limit: [100, 100], format: :jpg), alt: "#{product.name} image", class: "card-image" %>
          <%#= image_tag product.image.variant(resize_to_limit: [100, 100]), alt: "#{product.name} image", class: "card-image" %>
        <%= image_tag product.image, class: 'card-image' %>
        <% else %>
          <div class="card-image">No image available</div>
        <% end %>
        <div class="card-content">
          <div class="content">
            <%= link_to product.name, product_path(product), class: "has-text-weight-bold" %>
            <%= button_to "Add to cart", add_to_cart_carts_path(product_id: product.id), class: "button is-info" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>



<%= paginate @products %>
