<%= form_with url: search_products_path, method: :get, local: true do %>
  <div class="field">
    <%= label_tag :search, "Search" %>
    <%= text_field_tag :search, params[:search] %>
  </div>

  <div class="field">
    <%= label_tag :category_id, "Category" %>
    <%= select_tag :category_id, options_for_select(@categories.map { |c| [c.name, c.id] }, selected: params[:category_id]), include_blank: "All Categories" %>
  </div>

  <div class="field">
    <%= submit_tag "Search", class: "button is-primary" %>
  </div>
<% end %>

